{
    "name": "huapuer/mcp-sdk-php",
    "description": "Model Context Protocol SDK for PHP fork from logiscape/mcp-sdk-php",
    "type": "library",
	"license": "MIT",
    "autoload": {
        "psr-4": {
            "Mcp\\": "src/"
        }
    },
    "require": {
        "php": ">=8.1",
        "psr/log": "^3.0",
        "ext-curl": "*",
        "cboden/ratchet": "^0.4",
        "monolog/monolog": "^3.0"
    },
    "suggest": {
        "ext-pcntl": "For better process handling in CLI environments"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.0"
    }
}
